# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /items/:id                  @controllers.ItemsController.get(id: Long)
POST    /items                      @controllers.ItemsController.post()
PUT     /items/:id                  @controllers.ItemsController.put(id: Long)
DELETE  /items/:id                  @controllers.ItemsController.delete(id: Long)

GET     /users/:id/items            @controllers.UsersController.getUserInfo(id: Long)

